    macros {
        Autopair_Quotes: Autopair_Quotes {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_tap>, <&kp DQT &kp DQT &kp LEFT_ARROW>;

            label = "AUTOPAIR_QUOTES";
        };

        selection_search: selection_search {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_tap>,
                <&kp LS(F10)>,
                <&macro_wait_time 20>,
                <&kp S>;

            label = "SELECTION_SEARCH";
        };

        line_select: line_select {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&macro_press>, <&kp HOME &kp LS(END)>;

            label = "LINE_SELECT";
        };

        Autopair_Bracket: Autopair_Brackets {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_BRACKET &kp RIGHT_BRACKET &kp LEFT_ARROW>;

            label = "AUTOPAIR_BRACKETS";
        };

        Autopair_Brace: Auotpair_Brace {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_BRACE &kp RIGHT_BRACE &kp LEFT_ARROW>;

            label = "AUOTPAIR_BRACE";
        };

        Autopair_Parenthesis: Autopair_Parenthesis {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LEFT_PARENTHESIS &kp RIGHT_PARENTHESIS &kp LEFT_ARROW>;

            label = "AUTOPAIR_PARENTHESIS";
