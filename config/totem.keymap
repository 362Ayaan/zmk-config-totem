&mt {
    quick-tap-ms = <100>;
    global-quick-tap;
    flavor = "tap-preferred";
    tapping-term-ms = <170>;
};

/ {
    combos {
        compatible = "zmk,combos";

        combo_esc {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };

        combo_gui {
            bindings = <&kp LEFT_GUI>;
            key-positions = <9 8>;
            timeout-ms = <50>;
        };

        combo_Larrow {
            bindings = <&kp LEFT_ARROW>;
            key-positions = <16 15>;
            timeout-ms = <50>;
        };

        combo_Rarrow {
            bindings = <&kp RIGHT_ARROW>;
            key-positions = <16 17>;
            timeout-ms = <50>;
        };

        combo_Tab {
            bindings = <&kp TAB>;
            key-positions = <10 21>;
            timeout-ms = <50>;
        };

        combo_Uparrow {
            bindings = <&kp UP_ARROW>;
            key-positions = <6 7>;
            timeout-ms = <50>;
        };

        combo_P {
            bindings = <&kp P>;
            key-positions = <30 19>;
            timeout-ms = <50>;
        };

        como_Downarrow {
            bindings = <&kp DOWN_ARROW>;
            key-positions = <27 28>;
            timeout-ms = <50>;
        };

        combo_Shyr1 {
            bindings = <&tog 3>;
            key-positions = <4 5>;
            timeout-ms = <50>;
        };

        combo_playpause {
            bindings = <&kp C_PLAY_PAUSE>;
            key-positions = <37 27>;
            timeout-ms = <50>;
        };
